    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Get Started?</h2>
            <p>Join thousands of patients who trust HealthCare+ for their medical needs</p>
            <button class="btn-cta" @onclick="HandleCtaClick">
                @(AuthService.IsAuthenticated() ? "Browse Doctors" : "Create Account")
            </button>
        </div>
    </section>
</div>

@code {
    private void GoToDoctors()
    {
        Navigation.NavigateTo("/doctors");
    }

    private void GoToMyAppointments()
    {
        Navigation.NavigateTo("/my-appointments");
    }

    private void GoToRegister()
    {
        Navigation.NavigateTo("/register");
    }

    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void HandleCtaClick()
    {
        Navigation.NavigateTo(AuthService.IsAuthenticated() ? "/doctors" : "/register");
    }
}
