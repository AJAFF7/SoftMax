@page "/"
@using BlazorAuthApp.Services
@inject NavigationManager Navigation
@inject AuthService AuthService

<PageTitle>HealthCare+ | Your Trusted Medical Partner</PageTitle>

<div class="home-page">
    <section class="hero-section">
