            <h1 class="hero-title">Your Health, Our Priority</h1>
            <p class="hero-subtitle">Book appointments with top-rated doctors in just a few clicks</p>
            <div class="hero-actions">
                @if (AuthService.IsAuthenticated())
                {
                    <button class="btn-hero-primary" @onclick="GoToDoctors">
                        Find a Doctor
                    </button>
                    <button class="btn-hero-secondary" @onclick="GoToMyAppointments">
                        My Appointments
                    </button>
                }
                else
                {
                    <button class="btn-hero-primary" @onclick="GoToRegister">
                        Get Started
                    </button>
                    <button class="btn-hero-secondary" @onclick="GoToLogin">
                        Login
                    </button>
                }
            </div>
        </div>
        <div class="hero-image">
